
  <%-include('partials/head.ejs', {stylesheet: '/note-id.css'})%>
  <body>
        <%-include('partials/navBar.ejs')%>

    <%#- include('partials/navBar')%>

    <div class="container">
      <div class="row">
        <div class="col" id="headerCol">
          <h1>Bird Sightings</h1>
        </div>
      </div>
      <div class="row">
        <div class="col" id="mainCol1">
          <div class="row">
            <div class="col-sm-12 col-md-6">Date: <%=date%></div>
            <div class="col-sm-12 col-md-6">
              Location: <%#=city%>, <%#=state%>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col" id="mainCol2">
          <div class="row">
            <div class="col-sm-12 col-md-6">Flock size: <%=flock_size%></div>
            <div class="col-sm-12 col-md-6">Duration: <%#=duration%></div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col" id="mainCol3">Behavior: <%=behavior%></div>
      </div>
      <div class="row">
        <div class="col" id="mainCol4">Details<br /><%#=text%></div>
      </div>
      <div class="row">
        <div class="col" id="mainCol5">
          <div class="col">Logged: <%#=dateStamp%>, <%#=timeStamp%></div>
          <div class="col" id="buttonCol">
            <a
              class="btn btn-primary"
              href="/sighting/<%#=globalIndex%>/edit"
              role="button"
              >Edit</a
            >
          </div>
        </div>
      </div>
    </div>
<%-include('partials/footer.ejs')%>
  </body>
</html>
